@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var name = HttpContext.Current.Server.UrlEncode(Model.Content.Name);
    var url = Model.Content.UrlWithDomain();

}
<!--- SHARING SECTION --->
<section class="section social share">
    <a href="https://twitter.com/share?text=@name&url=@url" target="_blank" title="Share on Twitter">
        <span class="primary badge"><i class="fa fa-fw fa-twitter"></i></span>
    </a>
    <a href="http://www.facebook.com/sharer.php?u=@url" target="_blank" title="Share on Facebook">
        <span class="primary badge"><i class="fa fa-fw fa-facebook"></i></span>
    </a>
    <a href="https://plus.google.com/share?url=@url" target="_blank" title="Share on Google +">
        <span class="primary badge"><i class="fa fa-fw fa-google"></i></span>
    </a>
    <a href="http://linkedin.com/shareArticle?mini=true&amp;url=@url" target="_blank" title="Share on LinkedIn">
        <span class="primary badge"><i class="fa fa-fw fa-linkedin"></i></span>
    </a>
</section>